<div class="mt-4">
    <h4>{{workout_date}} - {{category}}</h4>

    <button class="complete-workout btn bye-btn" data-id="{{id}}" data-complete="{{completed}}"><i
            class="fas fa-check"></i> Workout Completed</button>

    <p class="mt-1">
        <a class="btn" data-toggle="collapse" href="#workout-{{id}}" role="button" aria-expanded="false"
            aria-controls="workout-{{id}}">
            View Details
        </a>
    </p>
    
    <div class="collapse" id="workout-{{id}}">
        <div class="m-0 card card-body">
            <p>Distance: {{distance}}</p>
            <p>Duration: {{duration}}</p>
            <p>Workout Details: {{details}}</p>
        </div>
    </div>

    <hr>
</div>